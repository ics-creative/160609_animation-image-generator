{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true
  },
  "exclude": ["**/*.test.ts"],
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
