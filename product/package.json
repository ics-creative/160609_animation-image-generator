{
  "scripts": {
    "build": "tsc --project main-src/tsconfig.json && ng build --configuration production",
    "start": "tsc --project main-src/tsconfig.json && concurrently \"cross-env NODE_ENV=develop electron ./dist-config\" \"ng build --watch\"",
    "lint": "ng lint && eslint main-src/**/*.ts",
    "format": "ng lint --fix &&  eslint --fix main-src/**/*.ts && prettier */*.{ts,scss} --write",
    "release-darwin": "npm run prebuild-darwin && npm run package-darwin",
    "release-win32": "npm run prebuild-win32 && npm run package-win32",
    "release-windows-store": "npm run prebuild-win32 && npm run package-windows-store",
    "prebuild-darwin": "npm run build && node build-scripts/for-mac-prebuild.js",
    "package-darwin": "export DEBUG=electron-osx-sign && node build-scripts/for-mac-packaging.js",
    "prebuild-win32": "npm run build && node build-scripts/for-windows-prebuild.js",
    "package-win32": "node build-scripts/for-windows-packaging.js",
    "package-windows-store": "node build-scripts/for-windows-store-packaging.js",
    "copy-binary-asssets": "node build-scripts/copy-binary-assets.js"
  },
  "prettier": {
    "singleQuote": true
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "13.2.0",
    "@angular/common": "13.2.0",
    "@angular/compiler": "13.2.0",
    "@angular/core": "13.2.0",
    "@angular/forms": "13.2.0",
    "@angular/platform-browser": "13.2.0",
    "@angular/platform-browser-dynamic": "13.2.0",
    "@types/createjs": "^0.0.29",
    "bootstrap": "^4.3.1",
    "core-js": "^2.6.12",
    "crypto-js": "^3.3.0",
    "electron": "^15.3.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.15.0",
    "rxjs": "^6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.0",
    "@angular-devkit/core": "13.2.0",
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "13.2.0",
    "@angular/compiler-cli": "13.2.0",
    "@angular/language-service": "13.2.0",
    "@types/jquery": "^3.5.6",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "concurrently": "^4.1.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.1",
    "del": "^4.1.1",
    "electron-osx-sign": "0.4.11",
    "electron-packager": "^13.1.1",
    "electron-windows-store": "^2.1.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "eslint-plugin-react": "latest",
    "husky": "^2.7.0",
    "mkdirp": "^0.5.5",
    "prettier": "^2.5.1",
    "typescript": "4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
