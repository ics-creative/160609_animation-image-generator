{
  "scripts": {
    "build": "npm run clear-build && npm run build-main && npm run _copy-asssets-to-dist && ng build --configuration production",
    "build-main": "cd ./main-src && vite build && cd ../",
    "clear-build": "node build-scripts/clear-build.js",
    "start": "tsc --project main-src/tsconfig.json && npm run _copy-asssets-to-dist && concurrently \"cross-env NODE_ENV=develop electron ./dist\" \"ng build --watch\"",
    "lint": "eslint '{src,main-src}/**/*.{ts,html}' && tsc --project main-src/tsconfig.json",
    "format": "eslint --fix '{src,main-src}/**/*.{ts,html}' && prettier --write '{src,main-src}/**/*.{ts,scss,html}'",
    "release-darwin": "npm run prebuild-darwin && npm run package-darwin",
    "release-win32": "npm run prebuild-win32 && npm run package-win32",
    "release-windows-store": "npm run prebuild-win32 && npm run package-windows-store",
    "prebuild-darwin": "npm run build && node build-scripts/for-mac-prebuild.js",
    "package-darwin": "export DEBUG=electron-osx-sign && node build-scripts/for-mac-packaging.js -- 'development'",
    "package-mac-app-store": "export DEBUG=electron-osx-sign && node build-scripts/for-mac-packaging.js -- 'distribution'",
    "prebuild-win32": "npm run build && node build-scripts/for-windows-prebuild.js",
    "package-win32": "node build-scripts/for-windows-packaging.js",
    "package-windows-store": "node build-scripts/for-windows-store-packaging.js",
    "make-icon": "node build-scripts/make-icon.js",
    "_copy-asssets-to-dist": "node build-scripts/copy-assets-to-dist.js",
    "test": "vitest"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "16.0.1",
    "@angular/common": "16.0.1",
    "@angular/compiler": "16.0.1",
    "@angular/core": "16.0.1",
    "@angular/forms": "16.0.1",
    "@angular/platform-browser": "16.0.1",
    "@angular/platform-browser-dynamic": "16.0.1",
    "@types/createjs": "^0.0.29",
    "bootstrap": "^4.3.1",
    "core-js": "^2.6.12",
    "crypto-js": "^3.3.0",
    "electron": "^24.3.0",
    "electron-fetch": "^1.9.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.15.0",
    "rxjs": "^6.6.7",
    "tslib": "^2.0.0",
    "vite": "^2.8.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.1",
    "@angular-devkit/core": "16.0.1",
    "@angular-eslint/builder": "16.0.1",
    "@angular-eslint/eslint-plugin": "16.0.1",
    "@angular-eslint/eslint-plugin-template": "16.0.1",
    "@angular-eslint/schematics": "16.0.1",
    "@angular-eslint/template-parser": "16.0.1",
    "@angular/cli": "16.0.1",
    "@angular/compiler-cli": "16.0.1",
    "@angular/language-service": "16.0.1",
    "@electron/universal": "^1.3.4",
    "@types/jquery": "^3.5.6",
    "@types/node": "^16.4.14",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^4.1.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.1",
    "del": "^4.1.1",
    "electron-osx-sign": "0.6.0",
    "electron-packager": "^15.4.0",
    "electron-windows-store": "^2.1.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "latest",
    "husky": "^8.0.3",
    "icon-gen": "3.0.1",
    "mkdirp": "^0.5.5",
    "prettier": "^2.5.1",
    "sharp": "0.31.3",
    "typescript": "5.0.4",
    "vitest": "0.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}